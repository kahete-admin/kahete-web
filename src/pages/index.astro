                </div>
              </div>
              <!-- ITEM -->
              <div class="flex pb-12 lg:pb-24">
                <div
                  class="flex justify-center items-center mb-4 w-10 h-10 rounded-full bg-neutral-1000 lg:h-12 lg:w-12"
                >
