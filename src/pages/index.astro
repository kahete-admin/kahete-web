---
import BaseHead from "@components/BaseHead.astro";
import { Image } from "astro:assets";
import logo from "@public/logo_complete.svg";
import Footer from "@components/Footer.astro";
import right_arrow from "@public/svg/right_arrow.svg";
import header_picture from "@public/home_page_assets/home-page-header-picture.svg";
import how_it_works from "@public/home_page_assets/how-it-works-card.svg";
import tap_card_nfc from "@public/home_page_assets/tap-card-nfc.svg";
import personalized_profile from "@public/home_page_assets/personalized_profile.svg";
import connection from "@public/home_page_assets/connection.svg";
import connection_sm from "@public/home_page_assets/connections-sm.svg";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <header>
      <nav class="bg-neutral-1000 py-2.5 xl:px-16 px-8">
        <div
          class="flex flex-wrap justify-between items-center mx-auto max-w-screen-xl"
        >
          <a href="/" class="flex items-center">
            <Image
              src={logo}
              height={32}
              width={100}
              alt="Kahete Logo"
              format="avif"
              quality="high"
            />
          </a>
          <div class="flex items-center">
            <a
              href="#"
              class="text-white font-medium rounded-full text-sm mr-4 hidden lg:block"
            >
              ¿Cómo funciona?
            </a>
            <a
              href="#"
              class="text-white font-medium rounded-full text-sm mr-4 hidden lg:block"
            >
              Características
            </a>
            <a
              href="#"
              class="text-white font-medium rounded-full text-sm mr-4 hidden lg:block"
            >
              Contáctanos
            </a>
            <a
              href="#"
              class="text-black hover:text-black font-medium text-sm inline-flex items-center justify-center rounded-full bg-accent py-2 px-4 cursor-pointer"
            >
              Comienza ahora
              <Image
                height={30}
                width={30}
                src={right_arrow}
                alt="Download contact"
                format={"avif"}
                quality={"mid"}
                class="justify-start pl-2"
              />
            </a>
          </div>
        </div>
      </nav>
    </header>
    <!-- HEADER -->
    <section class="bg-neutral-1000 py-4 xl:px-16 px-8">
      <div
        class="lg:flex flex-wrap lg:flex-none lg:justify-between items-center max-w-screen-xl mx-auto"
      >
        <!-- Text -->
        <div class="lg:max-w-lg py-12 items-center">
          <h1
            class="mb-4 font-semibold text-5xl text-white text-center xl:text-start lg:text-start"
          >
            Comparte lo que eres en un solo toque.
          </h1>
          <p
            class="mb-6 font-light text-white text-center xl:text-start lg:text-start"
          >
            Conéctate en cualquier momento, en cualquier lugar
          </p>
          <div>
            <div class="w-full text-center lg:text-start">
              <!-- BUTTON -->
              <a
                href="#"
                class="text-black font-medium text-sm inline-flex items-center justify-center rounded-full bg-accent py-2 px-4 cursor-pointer"
              >
                Obtener tarjeta
                <Image
                  height={30}
                  width={30}
                  src={right_arrow}
                  alt="Obtener tarjeta"
                  format={"avif"}
                  quality={"mid"}
                  class="justify-center pl-2"
                />
              </a>
              <!-- END BUTTON -->
            </div>
          </div>
        </div>
        <!-- Image -->
        <div class="lg:max-w-md">
          <div class="w-full">
            <Image
              height={400}
              width={400}
              src={header_picture}
              alt="Profile picture"
              format={"avif"}
              quality={"high"}
              class="w-full"
            />
          </div>
        </div>
      </div>
    </section>
    <!-- CONNECTIONS -->
    <section class="bg-neutral-1000 py-8 xl:px-16 px-0">
      <div class="max-w-screen-xl mx-auto text-center w-full">
        <div>
          <h2 class="mb-1 text-2xl font-semibold text-white">
            Todo en un solo lugar
          </h2>
          <p class=" text-[#CBD9E1] pb-4">
            Todo tu contenido ingresado en tu perfil
          </p>
        </div>
        <div class="lg:px-16">
          <Image
            height={500}
            width={1500}
            src={connection}
            alt="Connections"
            format={"avif"}
            quality={"high"}
            class="hidden lg:block"
          />
          <Image
            height={1500}
            width={1500}
            src={connection_sm}
            alt="Connections"
            format={"avif"}
            quality={"high"}
            class="lg:hidden"
          />
        </div>
      </div>
    </section>
    <!-- /CONNECTIONS -->
    <!-- PRICES -->
    <section class="bg-neutral-950">
      <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
        <div class="mx-auto max-w-screen-md text-center mb-8 lg:mb-12">
          <h2
            class="mb-4 text-3xl tracking-tight font-semibold text-gray-90 text-white"
          >
            ¿Cómo funciona?
          </h2>
        </div>
        <div
          class="space-y-8 lg:grid lg:grid-cols-3 sm:gap-6 xl:gap-10 lg:space-y-0"
        >
          <!-- Pricing Card -->
          <div
            class="flex flex-col p-6 mx-auto max-w-lg text-center bg-[#151922] rounded-xl border border-[#3F484D] shadow xl:p-8 text-white"
          >
          <span class="text-accent font-extrabold pb-8">1</span>
            <Image
              height={300}
              width={300}
              src={personalized_profile}
              alt="personalized profiles"
              format={"avif"}
              quality={"high"}
              class="h-40 mx-auto"
            />
            <span class="pt-12 font-medium text-sm text-[#CBD9E1]">Crea tu perfil personalizado</span>
          </div>
          <!-- Pricing Card -->
          <div
            class="flex flex-col p-6 mx-auto max-w-lg text-center bg-[#151922] rounded-xl border border-[#3F484D] shadow xl:p-8 text-white"
          >
          <span class="text-accent font-extrabold pb-8">2</span>
            <Image
              height={300}
              width={300}
              src={how_it_works}
              alt="personalized profiles"
              format={"avif"}
              quality={"high"}
              class="h-40 mx-auto"
            />
            <span class="pt-12 font-medium text-sm text-[#CBD9E1]">Adquiere tu tarjeta</span>
          </div>
          <!-- Pricing Card -->
          <div
            class="flex flex-col p-6 mx-auto max-w-lg text-center bg-[#151922] rounded-xl border border-[#3F484D] shadow xl:p-8 text-white"
          >
          <span class="text-accent font-extrabold pb-8">3</span>
            <Image
              height={300}
              width={300}
              src={tap_card_nfc}
              alt="personalized profiles"
              format={"avif"}
              quality={"high"}
              class="h-40 mx-auto"
            />
            <span class="pt-12 font-medium text-sm text-[#CBD9E1]">Comparte tu información con el código QR o el lector NFC</span>
          </div>
        </div>
      </div>
      <!-- /PRICES -->

      <!-- TESTIMONIALS -->
      <section class="bg-neutral-950 text-white pb-32">
        <div
          class="max-w-screen-xl px-4 py-8 mx-auto text-center lg:py-16 lg:px-6"
        >
          <figure class="max-w-screen-md mx-auto">
            <svg
              class="h-12 mx-auto mb-3"
              viewBox="0 0 24 27"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                d="M14.017 18L14.017 10.609C14.017 4.905 17.748 1.039 23 0L23.995 2.151C21.563 3.068 20 5.789 20 8H24V18H14.017ZM0 18V10.609C0 4.905 3.748 1.038 9 0L9.996 2.151C7.563 3.068 6 5.789 6 8H9.983L9.983 18L0 18Z"
                fill="white"></path>
            </svg>
            <p class="text-2xl font-medium">
              "Flowbite is just awesome. It contains tons of predesigned
              components and pages starting from login screen to complex
              dashboard. Perfect choice for your next SaaS application."
            </p>
            <figcaption class="flex items-center justify-center mt-6 space-x-3">
              <img
                class="w-6 h-6 rounded-full"
                src="https://flowbite.s3.amazonaws.com/blocks/marketing-ui/avatars/michael-gouch.png"
                alt="profile picture"
              />
              <div
                class="flex items-center divide-x-2 divide-gray-500 dark:divide-gray-700"
              >
                <div class="pr-3 font-medium">Micheal Gough</div>
                <div class="pl-3 text-sm font-light text-white">
                  CEO at Google
                </div>
              </div>
            </figcaption>
          </figure>
        </div>
      </section>
      <!-- /TESTIMONIALS -->
      <!-- CONTACT -->
      <section class="bg-neutral-950 text-white">
        <div class="py-8 lg:py-16 px-4 mx-auto max-w-screen-md">
          <h2
            class="mb-4 text-4xl tracking-tight font-extrabold text-center text-white"
          >
            Contact Us
          </h2>
          <p class="mb-8 lg:mb-16 font-light text-center text-white sm:text-xl">
            Got a technical issue? Want to send feedback about a beta feature?
            Need details about our Business plan? Let us know.
          </p>
          <form action="#" class="space-y-8">
            <div>
              <label for="email" class="block mb-2 text-sm font-medium"
                >Your email</label
              >
              <input
                type="email"
                id="email"
                class="shadow-sm bg-neutral-900 border border-neutral-300 text-sm rounded-lg focus:ring-primary-500 focus:border-neutral-500 block w-full p-2.5 text-white"
                placeholder="name@flowbite.com"
                required
              />
            </div>
            <div>
              <label for="subject" class="block mb-2 text-sm font-medium"
                >Subject</label
              >
              <input
                type="text"
                id="subject"
                class="block p-3 w-full text-sm bg-neutral-900 rounded-lg border border-neutral-300 shadow-sm focus:ring-neutral-500 focus:border-neutral-500 text-white"
                placeholder="Let us know how we can help you"
                required
              />
            </div>
            <div class="sm:col-span-2">
              <label for="message" class="block mb-2 text-sm font-medium"
                >Your message</label
              >
              <textarea
                id="message"
                rows="6"
                class="block p-2.5 w-full text-sm bg-neutral-900 rounded-lg shadow-sm border border-neutral-300 focus:ring-neutral-500 focus:border-neutral-500 text-white"
                placeholder="Leave a comment..."></textarea>
            </div>
            <button
              type="submit"
              class="py-3 px-5 text-sm font-medium text-center text-black rounded-lg bg-accent hover:bg-neutral-800 focus:ring-4 focus:outline-none"
              >Send message</button
            >
          </form>
        </div>
      </section>
      <!-- END CONTACT -->
      <Footer />
    </section>
  </body>
</html>
