            <div class="lg:w-2/4 hidden lg:block">
              <Image
                height={1500}
                width={1500}
                src={premium_cards}
                alt="Personalized profiles"
                format={"avif"}
                quality={"high"}
                class="h-50 mx-auto pr-12"
              />
            </div>
            <!-- LIST -->
            <div class="px-4 lg:w-2/4">
