---
import MainLayout from "@/layouts/MainLayout.astro";
import { Icon } from "astro-icon/components";
---

<MainLayout>
  <section class="h-screen">
    <div class="flex justify-center items-center p-12">
      <Icon name={"commons/kahete-icon"} size={48} />
    </div>
    <!-- Titles -->
    <div class="flex flex-col items-start justify-center p-4">
      <h4 class="subtitle">Select your plan</h4>
      <h2 class="title">Which is best for you?</h2>
    </div>
    <!-- Select plan  -->
    <!-- TODO: Create a component for the card -->
    <div class="generic-card card-container-primary">
      <h4 class="text-white font-bold pt-2 text-xl">Basic</h4>
      <h4 class="text-white text-sm font-bold pb-2">$3 USD/mo</h4>
      <ol>
        <li class="text-white">Unlimited Projects</li>
        <li class="text-white">Unlimited Clients</li>
        <li class="text-white">Unlimited Invoices</li>
      </ol>
      <div class="w-full justify-center pt-4">
        <div class="generic-button create-account-button">Create Account</div>
      </div>
    </div>
    <!-- TODO: Create a component for the card -->
    <div class="generic-card card-container-secondary">
      <h4 class="text-white font-bold pt-2 text-xl">Enterprise</h4>
      <p class="text-[#D1D1D1]">
        Built for larger organizations who want to scale with confidence.
      </p>
      <div class="w-full justify-center pt-2">
        <div class="generic-button contact-us-button">Contact us</div>
      </div>
    </div>
  </section>
</MainLayout>

<!-- TODO: Add styles to a global stylesheet -->
<style is:global>
  .card-container-primary {
    background-color: #272b2e;
    margin: 12px;
    border: 1px solid #467d83;
  }

  .card-container-secondary {
    background-color: transparent;
    margin: 12px;
    border: 1px solid #575656;
  }

  .create-account-button {
    background-color: white;
    color: black;
  }

  .contact-us-button {
    background-color: transparent;
    border: 1px solid #d0d1d2;
    color: white;
  }
</style>
