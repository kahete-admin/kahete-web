---
import BaseHead from "@components/BaseHead.astro";
import Footer from "@components/Footer.astro";
import Header from "@/components/Header.astro";
import right_arrow from "@public/svg/right_arrow.svg";
import { Image } from "astro:assets";
import lockPerson from "@public/svg/lock_person.svg";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={"Not available"} description={"Page unavailable"} />
  </head>
  <body>
    <Header displayGetStartedButton={false} />
    <section>
      <div class="py-2 px-6 mx-auto max-w-screen-xl sm:py-8 lg:px-6 h-screen">
        <div class="mx-auto max-w-screen-sm text-center relative top-28">
          <div class="flex justify-center items-center">
            <Image
              src={lockPerson}
              height={175}
              width={175}
              alt="profile unavailable"
              format="svg"
              quality="mid"
            />
          </div>
          <div class="text-center pb-8 pt-4 text-base self-center">
            <h4 class="text-white font-semibold">
              This profile is not available
            </h4>
            <span class="text-about font-normal">
              Don't miss out on the opportunity to make powerful connections.
            </span>
          </div>
          <a
            href="/"
            class="inline-flex items-center justify-center cursor-pointer
            text-black bg-accent font-medium rounded-full text-sm pl-4 pr-1 py-2 mr-2"
          >
            <span class="text-black font-semibold text-sm pr-2">Contact us</span
            >
            <Image
              height={30}
              width={30}
              src={right_arrow}
              alt="Download contact"
              format={"avif"}
              quality={"mid"}
              class="justify-start pr-2"
            />
          </a>
        </div>
      </div>
      <Footer />
    </section>
  </body>
</html>
