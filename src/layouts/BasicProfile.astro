---
import BaseHead from "@components/BaseHead.astro";
import Footer from "@components/Footer.astro";
import NavBarProfile from "@components/NavBarProfile.astro";
import ContactButton from "@components/ContactButton.astro";
import { Image } from "astro:assets";
import logo from "@public/svg/logo.svg";

const {
  slug,
  username,
  title,
  about,
  profile_picture,
  phone_number,
  email,
  whatsapp,
} = Astro.props;
---
<script
  is:inline
  src="https://cdn.jsdelivr.net/gh/davidshimjs/qrcodejs/qrcode.min.js"></script>
<script define:vars={{ slug }}>
  document.onreadystatechange = function () {
    if (document.readyState === "loading") {
      console.log("Page is loading");
    }
    if (document.readyState === "interactive") {
      console.log("DOM is ready");
    }
    if (document.readyState === "complete") {
      console.log("Page is fully loaded");
      const qrcode = new QRCode(document.getElementById("qrcode"), {
        text: "https://www.kahete.com/" + slug,
        maxWidth: 600,
        maxHeight: 600,
        minWidth: 500,
        minHeight: 500,
        colorDark: "#000",
        colorLight: "#fff",
        correctLevel: QRCode.CorrectLevel.H,
      });
    }
  };
</script>
<html lang="en">
  <head>
    <BaseHead title={username} description={about} image={profile_picture} />
  </head>
  <body>
    <NavBarProfile
      username={username}
      title={title}
      profile_picture={profile_picture}
      phone_number={phone_number}
      email={email}
    />
    <section class="bg-neutral-1000 text-white min-h-screen">
      <div class="py-2 px-6 mx-auto max-w-screen-xl sm:py-8 lg:px-6">
        <div class="mx-auto max-w-screen-sm text-center">
          <div class="flex justify-center items-center pt-4 lg:mb-6 mb-6">
            <Image
              format={"avif"}
              alt={username}
              src={profile_picture ? profile_picture : logo}
              quality={"mid"}
              height={200}
              width={200}
              style="border-radius: 70px"
            />
          </div>
          <div class="text-center pb-2 text-base">
            <h6 class="font-semibold text-white">
              {username}
            </h6>
            <h6 class="text-white font-normal">{title}</h6>
          </div>

          <div>
            <div class="content mt-1 text-center text-about text-sm pb-6">
              {about}
            </div>
            <div class="flex gap-3">
              <ContactButton
                buttonType="Phone"
                phone={phone_number}
                whatsapp={whatsapp}
              />
              <ContactButton buttonType="Email" email={email} />
              <ContactButton buttonType="WhatsApp" whatsapp={whatsapp} />
            </div>
          </div>
          <!-- SOCIALMEDIA -->
          <div>
            <slot />
          </div>
          <!-- /SOCIALMEDIA -->
          <!-- QR -->
          <div class="bg-white rounded-lg pb-8">
            <div id="qrcode" class="flex mx-auto justify-center p-12"></div>
            <label class="text-black font-bold text-sm capitalize"
              >{username}</label
            >
            <br />
            <label class="text-black capitalize text-xs">{title}</label>
          </div>
          <!-- /QR -->
        </div>
      </div>
      <Footer />
    </section>
  </body>
</html>
