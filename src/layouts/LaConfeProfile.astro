---
import BaseHead from "@components/BaseHead.astro";
import Footer from "@components/Footer.astro";
import { Image } from "astro:assets";
import blogPlaceholder from "@public/la_confe/laconfe_square_logo.jpeg";
import qrCode from "@public/svg/qr-code.svg";
import NavBarLaConfeProfile from "@/components/NavBarLaConfeProfile.astro";

interface Props {
  username: string;
  title: string;
  about: string;
  profile_picture?: any;
  email?: string;
  whatsapp?: string;
  phone_number?: string;
  color_group: string;
}

const {
  username,
  title,
  about,
  profile_picture,
  email,
  whatsapp,
  phone_number,
  color_group,
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={username} description={about} />
  </head>
  <body>
    <NavBarLaConfeProfile
      username={username}
      title={title}
      profile_picture={profile_picture}
      phone_number={phone_number!}
    />
    <section class="bg-neutral-1000 text-white">
      <div class="py-2 px-6 mx-auto max-w-screen-xl sm:py-8 lg:px-6">
        <div class="mx-auto max-w-screen-sm text-center">
          <div class="flex justify-center items-center pt-4 lg:mb-6 mb-6">
            <Image
              format={"avif"}
              alt={username}
              src={profile_picture === "" ? blogPlaceholder : profile_picture}
              quality={"mid"}
              height={1000}
              width={1000}
              style={`border-radius: 60px;border: 4px solid ${color_group};padding: 6px; width: 200px; height: 200px;`}
            />
          </div>
          <div class="text-center pb-1 text-base">
            <h6 class="font-semibold text-white capitalize">
              {username}
            </h6>
            <h6 class="text-white font-normal capitalize">{title}</h6>
          </div>

          <div>
            <div
              class="content mt-1 text-center text-about text-sm pb-6 capitalize"
            >
              {about}
            </div>
          </div>
          <!-- SOCIALMEDIA -->
          <div>
            <slot />
          </div>
          <!-- /SOCIALMEDIA -->
          <!-- QR -->
          <div id="qr-code" class="p-12 my-12 bg-white rounded-lg">
            <Image
              format={"avif"}
              alt={"qr"}
              src={qrCode}
              quality={"mid"}
              height={1000}
              width={1000}
            />
            <lable class="text-black font-bold text-sm capitalize">{username}</lable>
            <br />
            <lable class="text-black capitalize text-xs">{about}</lable>
          </div>
          <!-- /QR -->
        </div>
      </div>
      <Footer />
    </section>
  </body>
</html>
