---
import type { BreadcrumbProps } from "@/interfaces";
const {
  dataTarget,
  title,
  isInitiallyActive = false,
} = Astro.props as BreadcrumbProps;
---

<span
  data-target={dataTarget}
  class=`${isInitiallyActive ? 'active-breadcrumb' : ''} nav-btn breadcrum-list-item text-sm text-center`
  >{title}</span
>
