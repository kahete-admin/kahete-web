---
import logo from "@public/svg/logo.svg";
import { Image } from "astro:assets";
interface Props {
  username: string;
  title: string;
  profile_picture?: string;
  phone_number: string;
}

const { username, title, profile_picture, phone_number } = Astro.props;
const contactInfo = {
  username: username,
  title: title,
  profile_picture: profile_picture,
  phone_number: phone_number,
};
---

